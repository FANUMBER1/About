<header class="header_section">
  <nav class="navbar navbar-expand-lg custom_nav-container ">
    <a class="navbar-brand" href="/">
      <span>
        Giftos
      </span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class=""></span>
    </button>

    <div class="collapse navbar-collapse innerpage_navbar" id="navbarSupportedContent">
      <ul class="navbar-nav  ">
        <li class="nav-item  <%= k1 %>">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item  <%= k2 %>">
          <a class="nav-link" href="/shop">
            Shop
          </a>
        </li>
        <li class="nav-item  <%= k3 %>">
          <a class="nav-link" href="/why">
            Why Us
          </a>
        </li>
        <li class="nav-item  <%= k4 %>">
          <a class="nav-link" href="/testimonial">
            Testimonial
          </a>
        </li>
        <li class="nav-item  <%= k5 %>">
          <a class="nav-link" href="/contact">Contact Us</a>
        </li>
      </ul>
      <div class="user_option">
        <% if(user[0]==undefined){%>
          <a href="/login">
            <i class="fa fa-user" aria-hidden="true"></i>
            <span>
              Login
            </span>
          </a>
          <%}else{%>
            <a href="" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasUser"
              aria-controls="offcanvasRight">
              <img src="<%= user[0].avata %>" alt="Image" class="small-circle-img">
            </a>
            <%}%>
              <a onclick="showgiohang()" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu"
                aria-controls="offcanvasRight">
                <i class="fa fa-shopping-bag"></i>
              </a>
              <form class="form-inline" action="/search" method="POST">
                <button class="btn nav_search-btn mr-1" type="submit">
                  <i class="fa fa-search" aria-hidden="true"></i>
                </button>
                <input id="search-input" class="form-control" name="timkiem" type="text" placeholder="Search" >
              </form>
      </div>
    </div>
  </nav>

  <!---buy product-->

  <div class="offcanvas offcanvas-end offcanvas-custom-zindex overflow-auto <%= active %> " tabindex="-1"
    id="offcanvasMenu">
    <!-- Offcanvas header -->
    <div class="offcanvas-header justify-content-between border-bottom px-3">
      <h5 class="mb-0">Your Cart</h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <!-- Offcanvas body -->
    <div id="cartItem" class="offcanvas-body d-flex flex-column px-3">
    </div>
    <div class="d-grid gap-2 col-12 mb-3 ">
      <div class="row">
        <p class="col-6">Subtotal:</p>
        <p id="quantityItem" class="col-6 text-right">
        </p>
      </div>
      <button class="btn btn-lg btn-dark w-100 rounded-pill" type="button">Add to cart</button>
    </div>
  </div>

  <% if(user[0]!=undefined){%>
    <!----INFORUSER-->
    <div class="offcanvas offcanvas-end offcanvas-custom-zindex overflow-auto  " tabindex="-1" id="offcanvasUser">
      <!-- Offcanvas header -->
      <div class="offcanvas-header justify-content-between border-bottom px-3">
        <h5 class="mb-0">Your Profile</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>

      <!-- Offcanvas body -->
      <div class="offcanvas-body d-flex flex-column px-3">

        <!-- cvbvcxzXcvbn -->
        <div class="row g-2 p-2 border-bottom justify-content-center">
          <!-- Image -->
          <img src="<%= user[0].avata %>" alt="Image" class="big-circle-img">
        </div>

        <!-- Button and price -->
        <div class="row g-2 p-2 ">
          <p>Name: <%=user[0].name %>
          </p>
          <p>Email: <%=user[0].email %>
          </p>
        </div>
      </div>
      <div class="d-grid gap-2 col-12 mb-3 ">
        <button class="btn btn-lg btn-dark w-100 rounded-pill" type="button"><a style="color:white"
            href="/login">LOGIN</a></button>
        <button class="btn btn-lg btn-dark w-100 rounded-pill" type="button"><a style="color:white"
            href="/logout">LOGOUT</a></button>
      </div>
    </div>
    </div>
    <%}%>
</header>