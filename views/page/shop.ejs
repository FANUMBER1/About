<%- include('../common/header') %>


<%- include('../common/css.ejs') %>

<body   >
  <div class="hero_area">
    <!-- header section strats -->
    <%- include('../common/siderheader.ejs')%>

    <!-- end header section -->

  </div>
  <!-- end hero area -->

  <!-- shop section -->

  <section class="shop_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Latest Products
        </h2>
      </div>
      <div class="row">
        <% for(i=0;i< product.length; i++){%>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="box">
              <a href="/product/<%= product[i].id %>">
                <div class="img-box">
                  <img src="<%= product[i].img %>" alt="">
                </div>
                <div class="detail-box">
                  <h6>
                    <%= product[i].name %>
                  </h6>
                  <h6>
                    Price
                    <span>
                      $<%= product[i].price %>
                    </span>
                  </h6>
                </div>
                <div class="new">
                  <span>
                    New
                  </span>
                </div>
              </a>
            </div>
          </div>
          <%}%>
      </div>
      <div class="btn-box">
        <a href="">
          View All Products
        </a>
      </div>
    </div>
  </section>

  <!-- end shop section -->

  <!-- info section -->

  <section class="info_section  layout_padding2-top">
    <div class="social_container">
      <div class="social_box">
        <% for(i=0; i< soicial.length; i++){%>
        <a href="<%= soicial[i].link %>">
          <i class="fa fa-<%= soicial[i].name %>" aria-hidden="true"></i>
        </a>
        <%}%>
      </div>
    </div>
    <div class="info_container ">
      <div class="container">
        <div class="row">
          <div class="col-md-6 col-lg-3">
            <h6>
              ABOUT US
            </h6>
            <p>
              <%= profile[0].conten1 %>
            </p>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="info_form ">
              <h5>
                Newsletter
              </h5>
              <form action="/seller" method="POST">
                <input type="email" placeholder="Enter your email" name="email">
                <button type="submit">
                  Subscribe
                </button>
              </form>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <h6>
              NEED HELP
            </h6>
            <p>
              <%= profile[0].conten2 %>
            </p>
          </div>
          <div class="col-md-6 col-lg-3">
            <h6>
              CONTACT US
            </h6>
            <div class="info_link-box">
              <a href="">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
                <span> <%= profile[0].address %> </span>
              </a>
              <a href="">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <span><%= profile[0].phone %> </span>
              </a>
              <a href="">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                <span><%= profile[0].gmail %> </span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- footer section -->
    <footer class=" footer_section">
      <div class="container">
        <p>
          &copy; <span id="displayYear"></span> All Rights Reserved By
          <a href="https://html.design/">Free Html Templates</a>
        </p>
      </div>
    </footer>
    <!-- footer section -->

  </section>

  <!-- end info section -->


  <%- include('../common/js.ejs')%>

</body>

</html>